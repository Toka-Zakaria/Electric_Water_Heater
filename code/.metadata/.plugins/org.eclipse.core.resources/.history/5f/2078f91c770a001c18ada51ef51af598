		/*
		 * Configure the led pin as output pin
		 */
		LED1_DIRECTION_PORT = SET_BIT(LED1_DIRECTION_PORT, LED1_OUTPUT_PIN);
		break;

	case 2:
		break;

	}/*end of switch case*/




}/*end of Led_Init*/


